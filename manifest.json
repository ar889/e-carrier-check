{
  "manifest_version": 3,
  "name": "Truck Type Extractor",
  "version": "1.0",
  "description": "Extracts truck type from page and shows it in an alert.",
  "host_permissions": [
  "https://generativelanguage.googleapis.com/*"
],
"permissions": [
  "activeTab",
  "scripting",
  "storage"
],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://lookup.ecarriercheck.com/*"],
      "js": ["content.js"]
    }
  ]
}
